{
  "name": "reminder-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "start": "NODE_ENV=dev ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=dev concurrently nodemon src/main.ts \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "NODE_ENV=dev nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build && npm run copy:env",
    "start:prod": "NODE_ENV=prod node -r ./tsconfig-paths-bootstrap.js dist/main",
    "prestart:staging": "rimraf dist && npm run build && npm run copy:env",
    "start:staging": "NODE_ENV=staging node -r ./tsconfig-paths-bootstrap.js dist/main.js",
    "copy:env": "copyfiles environments/* dist/"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.5",
    "@nestjs/core": "^7.6.5",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^7.2.2",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.5",
    "@sentry/node": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.10.3",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "concurrently": "^5.3.0",
    "copyfiles": "^2.4.1",
    "ejs": "^3.1.5",
    "envfile": "^6.14.0",
    "i18n": "^0.13.2",
    "module-alias": "^2.2.2",
    "mongoose": "^5.11.12",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/ejs": "^3.0.5",
    "@types/express": "^4.17.3",
    "@types/i18n": "^0.12.0",
    "@types/node": "^13.9.1",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0"
  },
  "_moduleAliases": {
    "@root": "./dist",
    "@api": "./dist/api",
    "@middleware": "./dist/middleware",
    "@models": "./dist/models",
    "@shared": "./dist/shared",
    "@config": "./dist/config"
  }
}
