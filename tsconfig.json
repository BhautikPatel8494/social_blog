{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@root/*": ["*"],
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@middleware/*": ["middleware/*"],
      "@models/*": ["models/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
